          dp = 100
        elif mySnowballs<=4:
          rp = 0
          sp = 80
          dp = 20
        elif mySnowballs<=10:
          rp = 0
          sp = 100
          dp = 0

    if opponentsSnowballs==0:
      if opponentsDucksUsed==5:
        if mySnowballs==0:
          rp = 100
          sp = 0
          dp = 0
        else:
          rp = 0
          sp = 100
          dp = 0

      elif opponentsDucksUsed<=2:
        if mySnowballs==0:
          rp = 100
          sp = 0
          dp = 0
        elif mySnowballs<=4:
          rp = 20
          sp = 80
          dp = 0
        elif mySnowballs<=10:
          rp = 0
          sp = 100
          dp = 0

      elif opponentsDucksUsed<=4:
        if mySnowballs==0 and mySnowballs<10:
          rp = 100
          sp = 0
          dp = 0
        elif mySnowballs<=4 and mySnowballs<10:
          rp = 30
          sp = 70
          dp = 0
        elif mySnowballs==10:
          rp = 0
          sp = 100
          dp = 0
      elif opponentsDucksUsed<=4 and myDucksUsed==5:
        if mySnowballs==0:
          rp = 100
          sp = 0
          dp = 0
        elif mySnowballs>0:
          rp = 0
          sp = 100
          dp = 0
  #Detecting patterns in our own bot
  if len(myMoveHistory)>=4 and 0<mySnowballs<10 and myDucksUsed<5 and myScore<2 and rp==100:
    if myMoveHistory[-1]==myMoveHistory[-2] and myMoveHistory[-2]==myMoveHistory[-3]:
      if myMoveHistory[-1]=="RELOAD" and myDucksUsed<5:
        rp = 0
        sp = 100
        dp = 0
      if myMoveHistory[-1]=="THROW" and mySnowballs<10:
        rp = 100
        sp = 0
        dp = 0    
      if myMoveHistory[-1]=="DUCK" and mySnowballs>0:
        rp = 0
        sp = 100
        dp = 0
        
    if myMoveHistory[-2]==myMoveHistory[-4] and myMoveHistory[-1]==myMoveHistory[-3]:
      if myMoveHistory[-2]=="RELOAD" and myDucksUsed<5:
        rp = 0
        sp = 100
        dp = 0
      if myMoveHistory[-2]=="THROW" and mySnowballs<10:
        rp = 100
        sp = 0
        dp = 0    
      if myMoveHistory[-2]=="DUCK" and mySnowballs>0:
        rp = 0
        sp = 100
        dp = 0
        
    if myMoveHistory[-1]!=myMoveHistory[-2] and myMoveHistory[-1]!=myMoveHistory[-3] and myMoveHistory[-2]!=myMoveHistory[-3]:
      if myMoveHistory[-3]=="RELOAD" and myDucksUsed<5:
        rp = 0
        sp = 100
        dp = 0
      if myMoveHistory[-3]=="THROW" and mySnowballs<10:
        rp = 100
        sp = 0
        dp = 0    
      if myMoveHistory[-3]=="DUCK" and mySnowballs>0:
        rp = 0
        sp = 100
        dp = 0
        
#Detecting patterns in Other Programs

  if len(myMoveHistory)>=4 and 0<mySnowballs<10 and myDucksUsed<5 and dp==100:
    if myMoveHistory[-1]==myMoveHistory[-2] and myMoveHistory[-2]==myMoveHistory[-3]: 
      if opponentMoveHistory[-1]==opponentMoveHistory[-2] and opponentMoveHistory[-2]==opponentMoveHistory[-3]:
        if opponentMoveHistory[-1]=="RELOAD" and mySnowballs>0:
